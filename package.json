{
  "name": "QaMilestoneAcademy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "pretest": "npm run clean:reports",
    "scripts": "cypress open",

    "combine-reports": "mochawesome-merge --reportDir cypress/reports/mocha > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test" : "npm run scripts || npm run posttest",
    "runtest" : "npx cypress run"

  },

  "keywords": [],
  
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress": "^3.7.0",
    "cypress-multi-reporters": "^1.2.3",
    "mochawesome-report-generator": "^4.0.1"
  },
  "devDependencies": {
    "cypress-file-upload": "^3.5.0",
    "mocha": "^6.2.2",
    "mochawesome": "^4.1.0",
    "mochawesome-merge": "^2.1.0"
  }
}
